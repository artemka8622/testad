body
    background #DFE7ED

//SELECT //-------------------------------------------------------
.Select
    position relative
    display inline-block
    height 32px
    width 297px

    &-optionText
        font-size 20px

    &-selection
        padding 7px 10px
        display block
        border solid 1px #DADADA
        background-color #ffffff

        &--is-focused
            border 1px solid #0092DA

    &-dropdown
        padding 0
        margin 0
        position absolute
        left 0
        right 0
        border 1px solid #DADADA
        background-color #FFFFFF

        &--is-hidden
            visibility hidden


    &-option
        padding 7px 10px
        display block
        list-style-type none

        &--is-highlighted
            background-color #EAEFF1

//INPUT //-------------------------------------------------------
.Input
    background-color #ffffff

    &-label
        margin-bottom 11px
        display block
        font-size 13px
        color #616161

        &--error
            color #a94442

    &-content
        padding 7px 10px
        width 100%
        box-sizing border-box
        border 1px solid #DADADA
        background-color #FFFFFF
        outline none

        &--error
            border 1px solid #a94442

        &:focus
            border 1px solid #0092DA


    &-description
        margin-top 3px
        display block
        font-size 12px
        color #A9A9AC

        &--error
            color #a94442

    &-descriptionError
        color #a94442